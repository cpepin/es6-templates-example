mixin storeCard(store = {})
  .store
    .store__hero
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/store/${store.slug}`) #{store.name}
    .store__details
      - const description = store.description ? store.description.split(' ').slice(0, 25).join() : null
      p=description
